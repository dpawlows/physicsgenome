html{
	padding: 0;
	margin: 0;
	font-size: 100%;
	min-width: 960px;
	font-family: 'Helvetica Neue', 'Helvetica';
}
body {
	padding: 0;
	margin: 0;
}

.assignment p {text-indent: 0;}
.assignment img {
    display:block;
    border: none;
    margin: 0 auto;
}

.assignment tr{
    width: 4in;
}

.assignment pre{text-indent:1 em;}
.header {
	border-style: solid;
	border-color: #202020;
	border-width: 0 0 2px;
	background-color: #f7f7f7;
	color: #454545;
	padding: .6em 0;
}
.header .name {
	font-size: 1.5em;
}
.header .menu {
	list-style: none;
	margin: 0;
	padding: 0;
	text-align: right;
}
.header .menu li {
	display: inline-block;
	padding: 0 0 0 .6em;
}
.content {
	border-style: solid;
	border-color: #202020;
	background-color: #f7f7f7;
	color: #454545;
	border-width: 0;
	padding: .6em 0;
	min-height: 500px;
}
a {
	color: blue;/*#056143;*/
	text-decoration: none;
}
a:hover{
	color: #017e54;
}
a:visited{
	color:#056143};
}
.center {
	text-align: center;
}

.center_block {
    display: block;
    margin: 0 auto;
}

img {
	margin: 0 auto;
	padding: 0;
	border-style: solid;
	border-color: #202020;
	border-width: 2px;
}
.inherit {
	width: inherit;
}

.footer {
	border-style: solid;
	border-color: #202020;
	background-color: #f7f7f7;
	color: #454545;
	border-width: 2px 0 0;
	padding: .6em 0;
}
.copyright {
	text-align: center;
}
.address {
	list-style: none;
	margin: 1em 0 .4em;
	padding: 0;
}
.nb {
	border-width: 0;
}
p {
	text-indent: 0em;
	line-height: 150%;
}


.shadow {
	box-shadow: 1px 1px 30px #000;
	-webkit-box-shadow: 1px 1px 30px #000;
	-moz-box-shadow: 1px 1px 30px #000;
}
.small {
	font-size: .6em;
}

table th td {
    border:1px solid black;
}
